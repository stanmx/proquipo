<div id="title">
	<h3><%=h @category.title %></h3>
</div><!--end title-->

<div id="content-categories">

	<div class="categoryshow">
		<%= image_tag @category.image.url(:thumb) %>

		<p><%=h @category.description %></p>
	</div><!--end categoryshow-->
<div class="editmore">
<h5>
<%= link_to 'Usados', products_category_path(@category) %>	
<% if can? :update, @category %>
	<%= link_to 'Editar', edit_category_path(@category) %>
<% end %>
<%= link_to 'Regresar', categories_path %>
</h5>
</div><!--end editmore-->

</div><!--end content-->