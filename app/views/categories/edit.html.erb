<div id="title">
	<h3>Editar Categoria</h3>
</div><!--end title-->

<div id="content">
	<div id="bar"></div><!--end bar-->
	
	<div id="sidecontent">
	<div id="loginup">	
<% form_for(@category, :html => { :multipart => true }) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label 'Titulo' %><br />
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label 'descripci&oacute;n' %><br />
    <%= f.text_area :description %>
  </p>
  <p>
     <%= f.label 'Imagen' %>  
     <%= f.file_field :image %> 
  </p>
  <p>
    <%= f.submit 'Actualizar Categoria' %>
  </p>
<% end %>
<div class="editmore">
<h5><%= link_to 'Detalles', @category %> <%= link_to 'Regresar', categories_path %></h5>
</div><!--end editmore-->

	</div><!--end loginup-->
	</div><!--end sidecontent-->

</div><!--end content-->